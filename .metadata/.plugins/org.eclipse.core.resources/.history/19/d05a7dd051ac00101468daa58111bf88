    <script>
        // Display current date
        function updateCurrentDate() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                timeZone: 'Asia/Ho_Chi_Minh'
            };
            document.getElementById('currentDate').textContent = 
                now.toLocaleDateString('vi-VN', options);
        }

        // Newsletter form submission
        document.getElementById('newsletterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show success message
            document.getElementById('successMessage').style.display = 'block';
            
            // Scroll to success message
            document.getElementById('successMessage').scrollIntoView({ 
                behavior: 'smooth', 
                block: 'center' 
            });
            
            // Reset form
            this.reset();
            
            // Re-check the default category
            document.querySelector('input[name="categories"][value="news"]').checked = true;
        });

        // Management functions
        function showUpdateForm() {
            alert('T√≠nh nƒÉng c·∫≠p nh·∫≠t th√¥ng tin s·∫Ω ƒë∆∞·ª£c ph√°t tri·ªÉn trong giai ƒëo·∫°n ti·∫øp theo.');
        }

        function pauseNewsletter() {
            if (confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën t·∫°m d·ª´ng nh·∫≠n Newsletter?')) {
                alert('ƒê√£ t·∫°m d·ª´ng Newsletter. B·∫°n c√≥ th·ªÉ k√≠ch ho·∫°t l·∫°i b·∫•t c·ª© l√∫c n√†o.');
            }
        }

        function unsubscribeNewsletter() {
            if (confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën h·ªßy ƒëƒÉng k√Ω Newsletter? B·∫°n s·∫Ω kh√¥ng nh·∫≠n ƒë∆∞·ª£c tin t·ª©c m·ªõi nh·∫•t t·ª´ ABC News.')) {
                alert('ƒê√£ h·ªßy ƒëƒÉng k√Ω Newsletter th√†nh c√¥ng. C·∫£m ∆°n b·∫°n ƒë√£ ƒë·ªìng h√†nh c√πng ABC News!');
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateCurrentDate();
            setInterval(updateCurrentDate, 60000);
