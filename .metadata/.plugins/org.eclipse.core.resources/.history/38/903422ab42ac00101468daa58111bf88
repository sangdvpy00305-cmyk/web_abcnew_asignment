<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %>
<%@ taglib uri="jakarta.tags.fmt" prefix="fmt" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kết quả tìm kiếm: ${searchKeyword} - ABC News</title>
    <link rel="stylesheet" href="${pageContext.request.contextPath}/assets/css/style.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-top">
                <div class="logo">
                    <a href="${pageContext.request.contextPath}/">
                        <h1>ABC News</h1>
                    </a>
                </div>
                <div class="user-menu">
                    <c:choose>
                        <c:when test="${not empty sessionScope.user}">
                            <span>Xin chào, ${sessionScope.user.fullname}</span>
                            <c:if test="${sessionScope.user.role == 1}">
                                <a href="${pageContext.request.contextPath}/admin" class="btn-admin">Quản trị</a>
                            </c:if>
                            <c:if test="${sessionScope.user.role == 0}">
                                <a href="${pageContext.request.contextPath}/reporter" class="btn-reporter">Phóng viên</a>
                            </c:if>
                            <a href="${pageContext.request.contextPath}/logout" class="btn-logout">Đăng xuất</a>
                        </c:when>
                        <c:otherwise>
                            <a href="${pageContext.request.contextPath}/login" class="btn-login">Đăng nhập</a>
                        </c:otherwise>
                    </c:choose>
                </div>
            </div>
            
            <nav class="main-nav">
                <ul class="nav-menu">
                    <li><a href="${pageContext.request.contextPath}/">Trang chủ</a></li>
                    <c:forEach var="category" items="${categories}">
                        <li><a href="${pageContext.request.contextPath}/category?id=${category.id}">${category.name}</a></li>
                    </c:forEach>
                </ul>
            </nav>
        </div>
    </header>
    
    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="content-wrapper">
                <!-- Left Content -->
                <div class="left-content">
                    <!-- Breadcrumb -->
                    <nav class="breadcrumb">
                        <a href="${pageContext.request.contextPath}/">Trang chủ</a> > 
                        <span>Tìm kiếm</span>
                    </nav>
                    
                    <!-- Search Header -->
                    <div class="search-header">
                        <h1>Kết quả tìm kiếm</h1>
                        <div class="search-info">
                            <p>Từ khóa: <strong>"${searchKeyword}"</strong></p>
                            <p>Tìm thấy <strong>${totalResults}</strong> kết quả</p>
                        </div>
                        
                        <!-- Search Form -->
                        <form action="${pageContext.request.contextPath}/search" method="get" class="search-form-page">
                            <div class="search-input-group">
                                <input type="text" name="q" value="${searchKeyword}" placeholder="Nhập từ khóa tìm kiếm..." required>
                                <select name="category">
                                    <option value="">Tất cả loại tin</option>
                                    <c:forEach var="category" items="${categories}">
                                        <option value="${category.id}" <c:if test="${param.category == category.id}">selected</c:if>>
                                            ${category.name}
                                        </option>
                                    </c:forEach>
                                </select>
                                <button type="submit">Tìm kiếm</button>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Search Results -->
                    <section class="search-results">
                        <c:choose>
                            <c:when test="${not empty searchResults}">
                                <div class="news-list">
                                    <c:forEach var="news" items="${searchResults}">
                                        <div class="news-item search-result-item">
                                            <div class="news-image">
                                                <a href="${pageContext.request.contextPath}/news?id=${news.id}">
                                                    <img src="${pageContext.request.contextPath}/assets/Images/${news.image}" alt="${news.title}">
                                                </a>
                                            </div>
                                            <div class="news-content">
                                                <h3><a href="${pageContext.request.contextPath}/news?id=${news.id}">${news.title}</a></h3>
                                                <p class="news-summary">${news.content.substring(0, 250)}...</p>
                                                <p class="news-meta">
                                                    <span class="category">${news.categoryName}</span> - 
                                                    <span class="author">${news.authorName}</span> - 
                                                    <span class="date"><fmt:formatDate value="${news.postedDate}" pattern="dd/MM/yyyy"/></span> - 
                                                    <span class="views">${news.viewCount} lượt xem</span>
                                                </p>
                                            </div>
                                        </div>
                                    </c:forEach>
                                </div>
                                
                                <!-- Pagination -->
                                <c:if test="${totalPages > 1}">
                                    <div class="pagination">
                                        <c:if test="${currentPage > 1}">
                                            <a href="?q=${searchKeyword}&category=${param.category}&page=${currentPage - 1}" class="prev">« Trước</a>
                                        </c:if>
                                        
                                        <c:forEach begin="1" end="${totalPages}" var="i">
                                            <c:choose>
                                                <c:when test="${i == currentPage}">
                                                    <span class="current">${i}</span>
                                                </c:when>
                                                <c:otherwise>
                                                    <a href="?q=${searchKeyword}&category=${param.category}&page=${i}">${i}</a>
                                                </c:otherwise>
                                            </c:choose>
                                        </c:forEach>
                                        
                                        <c:if test="${currentPage < totalPages}">
                                            <a href="?q=${searchKeyword}&category=${param.category}&page=${currentPage + 1}" class="next">Sau »</a>
                                        </c:if>
                                    </div>
                                </c:if>
                            </c:when>
                            <c:otherwise>
                                <div class="no-results">
                                    <h3>Không tìm thấy kết quả nào</h3>
                                    <p>Không có tin tức nào phù hợp với từ khóa "<strong>${searchKeyword}</strong>"</p>
                                    <div class="search-suggestions">
                                        <h4>Gợi ý:</h4>
                                        <ul>
                                            <li>Kiểm tra lại chính tả từ khóa</li>
                                            <li>Thử sử dụng từ khóa khác</li>
                                            <li>Sử dụng từ khóa ngắn gọn hơn</li>
                                            <li>Tìm kiếm theo loại tin cụ thể</li>
                                        </ul>
                                    </div>
                                </div>
                            </c:otherwise>
                        </c:choose>
                    </section>
                </div>
                
                <!-- Right Sidebar -->
                <div class="right-sidebar">
                    <!-- Popular Keywords -->
                    <section class="popular-keywords">
                        <h3>Từ khóa phổ biến</h3>
                        <div class="keyword-tags">
                            <c:forEach var="keyword" items="${popularKeywords}">
                                <a href="${pageContext.request.contextPath}/search?q=${keyword}" class="keyword-tag">${keyword}</a>
                            </c:forEach>
                        </div>
                    </section>
                    
                    <!-- Most Viewed -->
                    <section class="most-viewed">
                        <h3>Tin được xem nhiều</h3>
                        <ul class="sidebar-news-list">
                            <c:forEach var="news" items="${mostViewedNews}">
                                <li>
                                    <a href="${pageContext.request.contextPath}/news?id=${news.id}">
                                        ${news.title}
                                    </a>
                                    <span class="views">${news.viewCount} lượt xem</span>
                                </li>
                            </c:forEach>
                        </ul>
                    </section>
                    
                    <!-- Newsletter Subscription -->
                    <section class="newsletter-signup">
                        <h3>Đăng ký nhận tin</h3>
                        <form action="${pageContext.request.contextPath}/newsletter" method="post">
                            <input type="email" name="email" placeholder="Nhập email của bạn" required>
                            <button type="submit">Đăng ký</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 ABC News. Tất cả quyền được bảo lưu.</p>
        </div>
    </footer>
</body>
</html>