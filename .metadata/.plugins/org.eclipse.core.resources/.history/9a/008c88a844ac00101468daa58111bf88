    <body>
        <div class="login-container">
            <div class="logo">
                <h1>ABC News</h1>
                <p>Hệ thống quản lý tin tức</p>
            </div>

            <div class="error-message" id="errorMessage">
                Tên đăng nhập hoặc mật khẩu không đúng!
            </div>

            <form id="loginForm" action="LoginServlet" method="post">
                <div class="form-group">
                    <label for="username">Tên đăng nhập:</label>
                    <input type="text" id="username" name="username" required>
                </div>

                <div class="form-group">
                    <label for="password">Mật khẩu:</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="form-group">
                    <label for="role">Vai trò:</label>
                    <select id="role" name="role" required>
                        <option value="">-- Chọn vai trò --</option>
                        <option value="admin">Quản trị viên</option>
                        <option value="reporter">Phóng viên</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </form>

            <button type="button" class="btn btn-secondary" onclick="goToHomePage()">
                Quay về trang chủ độc giả
            </button>

            <div class="home-link">
                <a href="index.jsp">← Về trang chủ</a>
            </div>
        </div>

        <script>
            // Xử lý form đăng nhập
            document.getElementById('loginForm').addEventListener('submit', function (e) {
                e.preventDefault();

                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                const role = document.getElementById('role').value;

                if (!username || !password || !role) {
                    showError('Vui lòng điền đầy đủ thông tin!');
                    return;
                }

                // Gửi form (có thể thay thế bằng AJAX call)
                this.submit();
            });

            // Hiển thị thông báo lỗi
            function showError(message) {
                const errorDiv = document.getElementById('errorMessage');
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';

                setTimeout(() => {
                    errorDiv.style.display = 'none';
                }, 5000);
            }

            // Quay về trang chủ độc giả
            function goToHomePage() {
                window.location.href = 'index.jsp';
            }

        // Kiểm tra thông báo lỗi từ server
        <% if (request.getParameter("error") != null) { %>
                showError('Đăng nhập thất bại. Vui lòng kiểm tra lại thông tin!');
        <% } %>
        </script>
    </body>

