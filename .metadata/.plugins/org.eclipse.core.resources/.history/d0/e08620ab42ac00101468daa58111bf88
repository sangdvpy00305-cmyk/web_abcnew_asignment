        <div class="login-content">
            <!-- Role Selection -->
            <div class="role-selection" id="roleSelection">
                <h3>Chọn vai trò đăng nhập</h3>
                <div class="role-buttons">
                    <div class="role-btn" onclick="selectRole('admin')">
                        <i class="fas fa-user-shield"></i>
                        <span>Quản trị viên</span>
                    </div>
                    <div class="role-btn" onclick="selectRole('reporter')">
                        <i class="fas fa-user-edit"></i>
                        <span>Phóng viên</span>
                    </div>
                </div>
                
                <!-- Role Info -->
                <div class="role-info" id="roleInfo" style="display: none;">
                    <div id="adminInfo" style="display: none;">
                        <h4><i class="fas fa-user-shield"></i> Quản trị viên</h4>
                        <ul>
                            <li>Quản lý toàn bộ hệ thống</li>
                            <li>Quản lý người dùng và phân quyền</li>
