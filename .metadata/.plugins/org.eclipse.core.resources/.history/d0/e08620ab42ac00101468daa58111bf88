    <script>
        let selectedRole = null;
        
        function selectRole(role) {
            selectedRole = role;
            
            // Remove active class from all role buttons
            document.querySelectorAll('.role-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Add active class to selected role
            event.target.closest('.role-btn').classList.add('active');
            
            // Hide role selection and show login form
            setTimeout(() => {
                document.getElementById('roleSelection').style.display = 'none';
                
                if (role === 'admin') {
                    document.getElementById('adminForm').classList.add('active');
                    document.getElementById('adminUsername').focus();
                } else if (role === 'reporter') {
                    document.getElementById('reporterForm').classList.add('active');
                    document.getElementById('reporterUsername').focus();
                }
            }, 300);
            
            // Show role info
            document.getElementById('roleInfo').style.display = 'block';
            document.getElementById('adminInfo').style.display = role === 'admin' ? 'block' : 'none';
            document.getElementById('reporterInfo').style.display = role === 'reporter' ? 'block' : 'none';
        }
        
        function backToRoleSelection() {
            // Hide all forms
            document.querySelectorAll('.login-form').forEach(form => {
                form.classList.remove('active');
            });
            
            // Show role selection
            document.getElementById('roleSelection').style.display = 'block';
            document.getElementById('roleInfo').style.display = 'none';
            
            // Remove active class from role buttons
            document.querySelectorAll('.role-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Clear form inputs
            document.querySelectorAll('input[type="text"], input[type="password"]').forEach(input => {
                input.value = '';
            });
            
            selectedRole = null;
        }
        
        // Handle form submission
        document.querySelectorAll('.login-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const username = this.querySelector('input[name="username"]').value;
                const password = this.querySelector('input[name="password"]').value;
                
                if (!username || !password) {
                    e.preventDefault();
                    alert('Vui lòng nhập đầy đủ tên đăng nhập và mật khẩu!');
                    return;
                }
                
                // Show loading state
                const submitBtn = this.querySelector('.btn-login');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang đăng nhập...';
                submitBtn.disabled = true;
                
                // Re-enable button after 3 seconds (in case of error)
                setTimeout(() => {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 3000);
            });
        });
        
        // Auto-focus on page load
        window.addEventListener('load', function() {
            // If there's an error, show the appropriate form
            const urlParams = new URLSearchParams(window.location.search);
            const role = urlParams.get('role');
            
            if (role && (role === 'admin' || role === 'reporter')) {
                selectRole(role);
            }
        });
    </script>
</body>
