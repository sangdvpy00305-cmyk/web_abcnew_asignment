    <script>
        // Auto-save draft functionality
        let autoSaveTimer;
        
        function autoSave() {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            
            if (title || content) {
                // Save to localStorage as draft
                const draft = {
                    title: title,
                    content: content,
                    categoryId: document.getElementById('categoryId').value,
                    timestamp: new Date().getTime()
                };
                localStorage.setItem('newsDraft', JSON.stringify(draft));
            }
        }
        
        function saveDraft() {
            autoSave();
            alert('Đã lưu nháp thành công!');
        }
        
        function loadDraft() {
            const draft = localStorage.getItem('newsDraft');
            if (draft && confirm('Bạn có muốn khôi phục bản nháp đã lưu?')) {
                const draftData = JSON.parse(draft);
                document.getElementById('title').value = draftData.title || '';
                document.getElementById('content').value = draftData.content || '';
                document.getElementById('categoryId').value = draftData.categoryId || '';
            }
        }
        
        // Auto-save every 30 seconds
        document.addEventListener('DOMContentLoaded', function() {
            // Load draft if exists and form is empty
            if (!document.getElementById('title').value && !document.getElementById('content').value) {
                loadDraft();
            }
            
            // Set up auto-save
            autoSaveTimer = setInterval(autoSave, 30000);
            
            // Save on form input
            document.getElementById('title').addEventListener('input', function() {
                clearTimeout(autoSaveTimer);
                autoSaveTimer = setTimeout(autoSave, 5000);
            });
            
            document.getElementById('content').addEventListener('input', function() {
                clearTimeout(autoSaveTimer);
                autoSaveTimer = setTimeout(autoSave, 5000);
            });
        });
        
        // Form validation
        document.querySelector('.admin-form').addEventListener('submit', function(e) {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            const categoryId = document.getElementById('categoryId').value;
            
            if (!title || !content || !categoryId) {
                e.preventDefault();
                alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                return;
            }
            
            if (content.length < 100) {
                if (!confirm('Nội dung tin tức khá ngắn. Bạn có chắc muốn đăng?')) {
                    e.preventDefault();
                    return;
                }
            }
            
            // Clear draft after successful submission
            localStorage.removeItem('newsDraft');
        });
    </script>
</body>
</html>