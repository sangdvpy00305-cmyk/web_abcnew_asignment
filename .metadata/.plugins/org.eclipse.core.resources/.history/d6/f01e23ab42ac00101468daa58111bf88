<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %>
<%@ taglib uri="jakarta.tags.fmt" prefix="fmt" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>${category.name} - ABC News</title>
    <link rel="stylesheet" href="${pageContext.request.contextPath}/assets/css/style.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-top">
                <div class="logo">
                    <a href="${pageContext.request.contextPath}/">
                        <h1>ABC News</h1>
                    </a>
                </div>
                <div class="user-menu">
                    <c:choose>
                        <c:when test="${not empty sessionScope.user}">
                            <span>Xin chào, ${sessionScope.user.fullname}</span>
                            <c:if test="${sessionScope.user.role == 1}">
                                <a href="${pageContext.request.contextPath}/admin" class="btn-admin">Quản trị</a>
                            </c:if>
                            <c:if test="${sessionScope.user.role == 0}">
                                <a href="${pageContext.request.contextPath}/reporter" class="btn-reporter">Phóng viên</a>
                            </c:if>
                            <a href="${pageContext.request.contextPath}/logout" class="btn-logout">Đăng xuất</a>
                        </c:when>
                        <c:otherwise>
                            <a href="${pageContext.request.contextPath}/login" class="btn-login">Đăng nhập</a>
                        </c:otherwise>
                    </c:choose>
                </div>
            </div>
            
            <nav class="main-nav">
                <ul class="nav-menu">
                    <li><a href="${pageContext.request.contextPath}/">Trang chủ</a></li>
                    <c:forEach var="cat" items="${categories}">
                        <li>
                            <a href="${pageContext.request.contextPath}/category?id=${cat.id}" 
                               <c:if test="${cat.id == category.id}">class="active"</c:if>>
                               ${cat.name}
                            </a>
                        </li>
                    </c:forEach>
                </ul>
            </nav>
        </div>
    </header>
    
    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="content-wrapper">
                <!-- Left Content -->
                <div class="left-content">
                    <!-- Breadcrumb -->
                    <nav class="breadcrumb">
                        <a href="${pageContext.request.contextPath}/">Trang chủ</a> > 
                        <span>${category.name}</span>
                    </nav>
                    
                    <!-- Category Header -->
                    <div class="category-header">
                        <h1>${category.name}</h1>
                        <p>Tổng cộng ${totalNews} bài viết</p>
                    </div>
                    
                    <!-- News List -->
                    <section class="news-list-section">
                        <div class="news-list">
                            <c:forEach var="news" items="${newsList}">
                                <div class="news-item">
                                    <div class="news-image">
                                        <a href="${pageContext.request.contextPath}/news?id=${news.id}">
                                            <img src="${pageContext.request.contextPath}/assets/Images/${news.image}" alt="${news.title}">
                                        </a>
                                    </div>
                                    <div class="news-content">
                                        <h3><a href="${pageContext.request.contextPath}/news?id=${news.id}">${news.title}</a></h3>
                                        <p class="news-summary">${news.content.substring(0, 200)}...</p>
                                        <p class="news-meta">
                                            <span class="author">${news.authorName}</span> - 
                                            <span class="date"><fmt:formatDate value="${news.postedDate}" pattern="dd/MM/yyyy"/></span> - 
                                            <span class="views">${news.viewCount} lượt xem</span>
                                        </p>
                                    </div>
                                </div>
                            </c:forEach>
                        </div>
                        
                        <!-- Pagination -->
                        <c:if test="${totalPages > 1}">
                            <div class="pagination">
                                <c:if test="${currentPage > 1}">
                                    <a href="?id=${category.id}&page=${currentPage - 1}" class="prev">« Trước</a>
                                </c:if>
                                
                                <c:forEach begin="1" end="${totalPages}" var="i">
                                    <c:choose>
                                        <c:when test="${i == currentPage}">
                                            <span class="current">${i}</span>
                                        </c:when>
                                        <c:otherwise>
                                            <a href="?id=${category.id}&page=${i}">${i}</a>
                                        </c:otherwise>
                                    </c:choose>
                                </c:forEach>
                                
                                <c:if test="${currentPage < totalPages}">
                                    <a href="?id=${category.id}&page=${currentPage + 1}" class="next">Sau »</a>
                                </c:if>
                            </div>
                        </c:if>
                    </section>
                </div>
                
                <!-- Right Sidebar -->
                <div class="right-sidebar">
                    <!-- Most Viewed -->
                    <section class="most-viewed">
                        <h3>Tin được xem nhiều</h3>
                        <ul class="sidebar-news-list">
                            <c:forEach var="popularNews" items="${mostViewedNews}">
                                <li>
                                    <a href="${pageContext.request.contextPath}/news?id=${popularNews.id}">
                                        ${popularNews.title}
                                    </a>
                                    <span class="views">${popularNews.viewCount} lượt xem</span>
                                </li>
                            </c:forEach>
                        </ul>
                    </section>
                    
                    <!-- Newsletter Subscription -->
                    <section class="newsletter-signup">
                        <h3>Đăng ký nhận tin</h3>
                        <form action="${pageContext.request.contextPath}/newsletter" method="post">
                            <input type="email" name="email" placeholder="Nhập email của bạn" required>
                            <button type="submit">Đăng ký</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 ABC News. Tất cả quyền được bảo lưu.</p>
