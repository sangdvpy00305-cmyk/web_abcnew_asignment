<%@ taglib uri="jakarta.tags.fmt" prefix="fmt" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <c:choose>
            <c:when test="${not empty news}">Sửa tin tức</c:when>
            <c:otherwise>Thêm tin tức mới</c:otherwise>
        </c:choose>
        - ABC News
    </title>
    <link rel="stylesheet" href="${pageContext.request.contextPath}/assets/css/style.css">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/assets/css/admin.css">
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <h1>ABC News - Quản trị</h1>
                </div>
                <div class="user-info">
                    <span>Xin chào, ${sessionScope.user.fullname}</span>
                    <a href="${pageContext.request.contextPath}/" class="btn-home">Trang chủ</a>
                    <a href="${pageContext.request.contextPath}/logout" class="btn-logout">Đăng xuất</a>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Admin Navigation -->
    <nav class="admin-nav">
        <div class="container">
            <ul class="admin-menu">
                <li><a href="${pageContext.request.contextPath}/admin">Trang chủ</a></li>
                <li><a href="${pageContext.request.contextPath}/admin/news" class="active">Quản lý tin tức</a></li>
                <li><a href="${pageContext.request.contextPath}/admin/categories">Quản lý loại tin</a></li>
                <li><a href="${pageContext.request.contextPath}/admin/users">Quản lý người dùng</a></li>
                <li><a href="${pageContext.request.contextPath}/admin/newsletters">Quản lý Newsletter</a></li>
            </ul>
        </div>
    </nav>
    
    <!-- Main Content -->
    <main class="admin-content">
        <div class="container">
            <div class="page-header">
                <h2>
                    <c:choose>
                        <c:when test="${not empty news}">Sửa tin tức</c:when>
                        <c:otherwise>Thêm tin tức mới</c:otherwise>
                    </c:choose>
                </h2>
                <a href="${pageContext.request.contextPath}/admin/news" class="btn-secondary">← Quay lại</a>
            </div>
            
            <!-- News Form -->
            <div class="form-container">
                <form action="${pageContext.request.contextPath}/admin/news/save" method="post" enctype="multipart/form-data" class="admin-form">
                    <c:if test="${not empty news}">
                        <input type="hidden" name="id" value="${news.id}">
                    </c:if>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="title">Tiêu đề tin tức *</label>
                            <input type="text" id="title" name="title" value="${news.title}" required maxlength="200">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group half">
                            <label for="categoryId">Loại tin *</label>
                            <select id="categoryId" name="categoryId" required>
                                <option value="">-- Chọn loại tin --</option>
                                <c:forEach var="category" items="${categories}">
                                    <option value="${category.id}" 
                                        <c:if test="${category.id == news.categoryId}">selected</c:if>>
                                        ${category.name}
                                    </option>
                                </c:forEach>
                            </select>
                        </div>
                        
                        <div class="form-group half">
                            <label for="author">Tác giả *</label>
                            <select id="author" name="author" required>
                                <option value="">-- Chọn tác giả --</option>
                                <c:forEach var="reporter" items="${reporters}">
                                    <option value="${reporter.id}" 
                                        <c:if test="${reporter.id == news.author}">selected</c:if>>
                                        ${reporter.fullname}
                                    </option>
                                </c:forEach>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group half">
                            <label for="image">Hình ảnh</label>
                            <input type="file" id="image" name="imageFile" accept="image/*">
                            <c:if test="${not empty news.image}">
                                <div class="current-image">
                                    <p>Hình hiện tại:</p>
                                    <img src="${pageContext.request.contextPath}/assets/Images/${news.image}" 
                                         alt="Current image" style="max-width: 200px; height: auto;">
                                    <input type="hidden" name="currentImage" value="${news.image}">
                                </div>
                            </c:if>
                        </div>
                        
                        <div class="form-group half">
                            <label for="home">Hiển thị trang chủ</label>
                            <div class="checkbox-group">
                                <input type="checkbox" id="home" name="home" value="1" 
                                    <c:if test="${news.home == 1}">checked</c:if>>
                                <label for="home">Hiển thị tin này ở trang chủ</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="content">Nội dung tin tức *</label>
                            <textarea id="content" name="content" rows="15" required>${news.content}</textarea>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <c:choose>
                                <c:when test="${not empty news}">Cập nhật</c:when>
                                <c:otherwise>Thêm mới</c:otherwise>
                            </c:choose>
                        </button>
                        <a href="${pageContext.request.contextPath}/admin/news" class="btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
            
            <c:if test="${not empty message}">
                <div class="message ${messageType}">
                    ${message}
                </div>
            </c:if>
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="admin-footer">
        <div class="container">
            <p>&copy; 2024 ABC News Admin Panel. Tất cả quyền được bảo lưu.</p>
        </div>
    </footer>
    
    <script>
        // Simple form validation
        document.querySelector('.admin-form').addEventListener('submit', function(e) {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            const categoryId = document.getElementById('categoryId').value;
            const author = document.getElementById('author').value;
            
            if (!title || !content || !categoryId || !author) {
                e.preventDefault();
                alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
            }
        });
    </script>
</body>
</html>