    <header class="header">
        <div class="container">
            <div class="header-top">
                <div class="logo">
                    <a href="${pageContext.request.contextPath}/">
                        <h1>ABC News</h1>
                    </a>
                </div>
                <div class="user-menu">
                    <c:choose>
                        <c:when test="${not empty sessionScope.user}">
                            <span>Xin chào, ${sessionScope.user.fullname}</span>
                            <c:if test="${sessionScope.user.role == 1}">
                                <a href="${pageContext.request.contextPath}/admin" class="btn-admin">Quản trị</a>
                            </c:if>
                            <c:if test="${sessionScope.user.role == 0}">
                                <a href="${pageContext.request.contextPath}/reporter" class="btn-reporter">Phóng viên</a>
                            </c:if>
                            <a href="${pageContext.request.contextPath}/logout" class="btn-logout">Đăng xuất</a>
                        </c:when>
                        <c:otherwise>
                            <a href="${pageContext.request.contextPath}/login" class="btn-login">Đăng nhập</a>
                        </c:otherwise>
                    </c:choose>
                </div>
            </div>
            
            <!-- Navigation Menu -->
            <nav class="main-nav">
                <ul class="nav-menu">
                    <li><a href="${pageContext.request.contextPath}/" class="active">Trang chủ</a></li>
                    <c:forEach var="category" items="${categories}">
                        <li><a href="${pageContext.request.contextPath}/category?id=${category.id}">${category.name}</a></li>
                    </c:forEach>
                </ul>
            </nav>
        </div>
    </header>
    
    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="content-wrapper">
                <!-- Left Content -->
                <div class="left-content">
                    <!-- Featured News -->
                    <c:if test="${not empty featuredNews}">
                        <section class="featured-news">
                            <h2>Tin nổi bật</h2>
                            <c:forEach var="news" items="${featuredNews}" varStatus="status">
                                <c:if test="${status.index == 0}">
                                    <div class="main-featured">
                                        <a href="${pageContext.request.contextPath}/news?id=${news.id}">
                                            <img src="${pageContext.request.contextPath}/assets/Images/${news.image}" alt="${news.title}">
                                            <h3>${news.title}</h3>
                                        </a>
                                        <p class="news-meta">
                                            <span class="author">${news.authorName}</span> - 
                                            <span class="date"><fmt:formatDate value="${news.postedDate}" pattern="dd/MM/yyyy"/></span> - 
                                            <span class="views">${news.viewCount} lượt xem</span>
                                        </p>
                                    </div>
                                </c:if>
                            </c:forEach>
                        </section>
                    </c:if>
                    
                    <!-- Latest News -->
                    <section class="latest-news">
                        <h2>Tin mới nhất</h2>
                        <div class="news-list">
                            <c:forEach var="news" items="${latestNews}">
                                <div class="news-item">
                                    <div class="news-image">
                                        <a href="${pageContext.request.contextPath}/news?id=${news.id}">
                                            <img src="${pageContext.request.contextPath}/assets/Images/${news.image}" alt="${news.title}">
                                        </a>
                                    </div>
                                    <div class="news-content">
                                        <h3><a href="${pageContext.request.contextPath}/news?id=${news.id}">${news.title}</a></h3>
                                        <p class="news-summary">${news.content.substring(0, 150)}...</p>
                                        <p class="news-meta">
                                            <span class="category">${news.categoryName}</span> - 
                                            <span class="author">${news.authorName}</span> - 
                                            <span class="date"><fmt:formatDate value="${news.postedDate}" pattern="dd/MM/yyyy"/></span>
                                        </p>
                                    </div>
                                </div>
                            </c:forEach>
                        </div>
                    </section>
                </div>
                
                <!-- Right Sidebar -->
                <div class="right-sidebar">
                    <!-- Most Viewed -->
                    <section class="most-viewed">
                        <h3>Tin được xem nhiều</h3>
                        <ul class="sidebar-news-list">
